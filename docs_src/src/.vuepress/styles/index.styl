@import url('https://fonts.googleapis.com/css?family=Montserrat&display=swap')

h4
    font-size 1.25rem

.home .feature
    display flex
    flex-basis 100% !important
    max-width 100% !important
    flex-direction row
    flex-wrap wrap
    text-align center
    align-items center
    justify-content center
    margin 2rem 1.5rem
    img
        min-width 275px

    @media screen and (min-width 720px)
        flex-wrap nowrap
        justify-content left
        text-align left
        img
            margin-right 2.5rem

.img-row
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    margin-top 1.5rem
    &.left
        flex-direction row
    &.right
        flex-direction row-reverse
    .row-content
        flex-grow 1

    @media screen and (min-width 960px)
        flex-wrap nowrap
        justify-content left
        &.left
            & > :first-child
                margin-right 2.5rem
        &.right
            & > :first-child
                margin-left 2.5rem

pre.vue-container
    border-left-width .5rem
    border-left-style solid
    border-color #42b983
    border-radius 0px
    & > code
        font-size 14px !important
        & > p
            line-height 1.4 !important
            margin -5px 0 -20px 0
        code
            background-color #42b983 !important
            padding 3px 5px
            border-radius 3px
            color #000
        em
            color #808080
            font-weight light

.center
    text-align center